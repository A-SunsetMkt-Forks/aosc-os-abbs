export CFLAGS="${CFLAGS} -fPIC"
export CXXFLAGS="${CXXFLAGS} -fPIC"

if [[ "${CROSS:-$ARCH}" = "loongson3" ]]; then
  echo "Setting LDC linker to ld.gold ..."
  export LDFLAGS="${LDFLAGS} -fPIC -fuse-ld=gold"
else
  echo "Setting LDC linker to ld.lld ..."
  export LDFLAGS="${LDFLAGS} -fPIC -fuse-ld=lld"
fi

