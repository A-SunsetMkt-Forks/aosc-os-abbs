export CFLAGS="${CFLAGS} -fPIC"
export CXXFLAGS="${CXXFLAGS} -fPIC"

if [[ "${CROSS:-$ARCH}" = "ppc64" || "${CROSS:-$ARCH}" = "powerpc" ]]; then
  export LDFLAGS="${LDFLAGS} -fPIC -fuse-ld=bfd"
else
  export LDFLAGS="${LDFLAGS} -fPIC -fuse-ld=gold"
fi

