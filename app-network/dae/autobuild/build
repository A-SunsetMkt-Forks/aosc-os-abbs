abinfo "Building dae"
make GOFLAGS="-buildvcs=false"

abinfo "Installing dae"
mkdir -pv "$PKGDIR"/etc/dae "$PKGDIR"/usr/lib/systemd/system "$PKGDIR"/usr/local/share/dae/
install -Dvm755 "dae" "$PKGDIR/usr/bin/dae"
install -Dvm644 "install/dae.service"  "$PKGDIR/usr/lib/systemd/system/dae.service"
install -Dvm640 "install/empty.dae" "$PKGDIR/etc/dae/config.dae"
install -Dvm644 "example.dae" "$PKGDIR/etc/dae/config.dae.example"
