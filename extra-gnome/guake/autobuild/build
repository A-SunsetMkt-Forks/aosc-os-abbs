abinfo "Building Guake ..."
PBR_VERSION=$PKGVER \
    python3 "$SRCDIR"/setup.py build

abinfo "Generating data files ..."
make \
    generate-desktop \
    generate-mo

abinfo "Installing Guake ..."
PBR_VERSION=$PKGVER \
    python3 setup.py install --root="$PKGDIR" --optimize=1

abinfo "Installing data files ..."
install -Dvm644 -t "$PKGDIR"/usr/share/guake/ \
   "$SRCDIR"/guake/data/*.glade
install -Dvm644 -t "$PKGDIR"/usr/share/pixmaps/guake/ \
   "$SRCDIR"/guake/data/pixmaps/*.png

make install-schemas install-locale \
    PREFIX="$PKGDIR"/usr
