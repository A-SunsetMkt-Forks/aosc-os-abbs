PKGNAME=tdeaccessibility
PKGSEC=Trinity
PKGDEP="akode tdebase tdemultimedia"
BUILDDEP="cmake imake"
PKGDES="Accessibility tools and utilities for Trinity Desktop Environment"

PKGCONFL="kmag kmousetool kmouth"

CMAKE_AFTER="-DLIB_INSTALL_DIR=/usr/lib \
             -DWITH_ALL_OPTIONS=ON \
             -DWITH_AKODE=OFF \
             -DWITH_GCC_VISIBILITY=OFF \
             -DWITH_GSTREAMER=OFF \
             -DBUILD_ALL=ON"
