abinfo "Building i18n data ..."
(
    cd "$SRCDIR"/../k3b-i18n-trinity-$PKGVER

    abinfo "Running CMake for k3b-i18n ..."
    cmake "$SRCDIR"/../k3b-i18n-trinity-$PKGVER \
        ${CMAKE_DEF} \
        -DBUILD_ALL=ON

    abinfo "Building k3b-i18n ..."
    make

    abinfo "Installing k3b-i18n ..."
    make install \
        DESTDIR="$PKGDIR"
)
