PKGNAME=krusader-trinity
PKGSEC=Trinity
PKGDEP="arts tdelibs"
PKGDES="A twin-panel file manager for Trinity Desktop Environment"

# KIO-Tar, KIO-ISO both part of tdelibs.
AUTOTOOLS_AFTER="--enable-new-ldflags \
                 --enable-final \
                 --enable-pie \
                 --disable-rpath \
                 --with-arts \
                 --with-konqueror \
                 --with-acl \
                 --with-javascript \
                 --without-kiotar \
                 --without-kioiso"

PKGCONFL="krusader"
