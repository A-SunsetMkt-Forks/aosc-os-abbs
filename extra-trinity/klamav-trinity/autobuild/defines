PKGSEC=Trinity
PKGDEP="clamav sqlite tdelibs"
PKGDES="A ClamAV frontend for Trinity Desktop Environment"

CMAKE_AFTER="-DLIB_INSTALL_DIR=/usr/lib \
             -DWITH_ALL_OPTIONS=ON \
             -DWITH_GCC_VISIBILITY=OFF \
             -DWITH_EMBEDDED_SQLITE=OFF \
             -DBUILD_ALL=ON"

PKGCONFL="klamav"

NOLIBTOOL=0
