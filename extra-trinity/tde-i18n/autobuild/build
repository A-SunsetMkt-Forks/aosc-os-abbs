for i in "$SRCDIR"/tde-i18n-*; do
    (
        mkdir -pv "$i"/build
        cd "$i"/build

        abinfo "Running CMake for $(basename $i) ..."
        cmake "$SRCDIR"/"$i"/build \
            ${CMAKE_DEF} \
            -DBUILD_ALL=ON \
            -DBUILD_DOC=ON \
            -DBUILD_DATA=ON \
            -DBUILD_MESSAGES=ON

        abinfo "Building $(basename $i) ..."
        make

        abinfo "Installing $(basename $i) ..."
        make install \
            DESTDIR="$PKGDIR"
    )
done
