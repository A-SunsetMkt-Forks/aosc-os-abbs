PKGSEC=Trinity
PKGDEP="tdelibs"
PKGDES="An xbiff-like mail notification utility for Trinity Desktop Environment"

CMAKE_AFTER="-DLIB_INSTALL_DIR=/usr/lib \
             -DWITH_ALL_OPTIONS=ON \
             -DWITH_GCC_VISIBILITY=OFF \
             -DWITH_MLED=ON \
             -DBUILD_ALL=ON"

PKGCONFL="kbiff"

NOLIBTOOL=0
