PKGNAME=dxvk-native
PKGDES="Native port of DXVK to allow usage without WINE"
PKGDEP="sdl2 vulkan-loader"
PKGSEC="libs"
BUILDDEP="glslang"
PKGPROV="libdxvk libdxvk_dxgi.so libdxvk_d3d9.so libdxvk_d3d11.so"

MESON_AFTER=(
	--buildtype release
	# https://github.com/doitsujin/dxvk/blob/d89e324bc48dbefee9a15f97f4ca7569db50a2f0/package-native.sh#L74C9-L74C45
	--force-fallback-for=libdisplay-info
	-Dbuild_id=false
)

FAIL_ARCH="!(amd64|arm64)"
