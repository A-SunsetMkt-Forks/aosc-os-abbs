>>>>>>> dbabebf626 (jack: adapt for Retro)

abinfo "Configuring JACK ..."
python2 "$SRCDIR"/waf \
    configure --prefix=/usr \
        --alsa \
        --classic \
        --dbus ${DOXYGEN} ${FFADO}

abinfo "Building JACK ..."
python2 "$SRCDIR"/waf build \
    -p \
    -j$(nproc)

abinfo "Installing JACK ..."
python2 "$SRCDIR"/waf install \
    --destdir="$PKGDIR"

abinfo "Setting executable bits for /usr/lib/*.so.* ..."
chmod -v +x "$PKGDIR"/usr/lib/*.so*
