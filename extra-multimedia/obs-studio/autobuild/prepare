prepare_cef() {
  export CEF_PATH="$(find "$SRCDIR/../" -name 'cef_binary_*_minimal' -type d -printf '%p')"
  (
    cd "$CEF_PATH" || exit 1
    mkdir -p build && cd build
    cmake .. -GNinja && ninja
  )
}

if [[ "${CROSS:-$ARCH}" = "amd64" || "${CROSS:-$ARCH}" = "arm64" ]]; then
  prepare_cef
fi
